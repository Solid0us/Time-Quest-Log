<Window x:Class="TimeQuestLogDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeQuestLogDesktopApp"
        xmlns:views="clr-namespace:TimeQuestLogDesktopApp.Views"
        xmlns:vms="clr-namespace:TimeQuestLogDesktopApp.ViewModels" xmlns:viewmodel="clr-namespace:TimeQuestLogDesktopApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="TimeQuest Log" Height="1000" Width="1600"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SignupViewModel}">
                <views:SignupView />
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
