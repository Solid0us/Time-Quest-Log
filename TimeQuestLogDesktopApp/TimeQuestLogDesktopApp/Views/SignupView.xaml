<UserControl x:Class="TimeQuestLogDesktopApp.Views.SignupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeQuestLogDesktopApp.Views" xmlns:viewmodels="clr-namespace:TimeQuestLogDesktopApp.ViewModels" xmlns:components="clr-namespace:TimeQuestLogDesktopApp.Components" d:DataContext="{d:DesignInstance Type=viewmodels:SignupViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label
          Grid.Column="1" 
          Grid.Row="0" 
          HorizontalAlignment="Center" 
          VerticalAlignment="Center">       
            <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}">
              Welcome to TimeQuest Log!
            </TextBlock>
        </Label>
        <StackPanel Grid.Column="1" Grid.Row="1" Background="{StaticResource SecondaryBrush}">
            <Label
                 Content="Register as a New User" 
                 FontSize="20"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 HorizontalAlignment="Center"  
                 VerticalAlignment="Center"/>
            <Label
                Content="Username" 
                Foreground="{StaticResource TextPrimaryBrush}"
                HorizontalAlignment="Center"  
                VerticalAlignment="Center"/>
            <TextBox 
                Height="25"
                BorderBrush="{StaticResource PrimaryBrush}"
                Grid.Column="1" 
                Background="{StaticResource SecondaryBrush}"
                HorizontalAlignment="Center" 
                Grid.Row="1" 
                TextWrapping="Wrap" 
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                VerticalAlignment="Center"
                Foreground="{StaticResource TextPrimaryBrush}"
                VerticalContentAlignment="Center"
                Width="200"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Background="{StaticResource SecondaryBrush}">
            <Label
                 Content="Email" 
                 Foreground="{StaticResource TextPrimaryBrush}"
                 HorizontalAlignment="Center"  
                 VerticalAlignment="Center"/>
            <TextBox 
                 Height="25"
                 BorderBrush="{StaticResource PrimaryBrush}"
                 Grid.Column="1" 
                 Background="{StaticResource SecondaryBrush}"
                 HorizontalAlignment="Center" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Center"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 VerticalContentAlignment="Center"
                 Width="200"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3" Background="#252525">
            <Label
                Grid.Column="1" 
                Grid.Row="1" 
                Content="Password" 
                HorizontalAlignment="Center"  
                Foreground="{StaticResource TextPrimaryBrush}"
                VerticalAlignment="Center"/>
                    <components:BindablePasswordBox
                    Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    />  
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="4" Background="#252525">
            <Label
                 Grid.Column="1" 
                 Grid.Row="1" 
                 Content="Confirm Password" 
                 HorizontalAlignment="Center"  
                 Foreground="{StaticResource TextPrimaryBrush}"
                 VerticalAlignment="Center"/>
                    <components:BindablePasswordBox
                             Password="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             /> 
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="6" Background="#252525" Height="100">
            <Button
                Style="{StaticResource RoundedButtonStyle}"
                Margin="0 20 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Register"
                Command="{Binding SignupCommand}"
                />
            <TextBlock 
                Margin="0 20 0 0"
                Foreground="White" 
                HorizontalAlignment="Center">
                    Already have an account?
                <Hyperlink
                    Foreground="{StaticResource TextLinkBrush}"
                    Command="{Binding NavigateToLogin}"
                    >Log in Here</Hyperlink>
                </TextBlock>    
        </StackPanel>
    </Grid>
</UserControl>
