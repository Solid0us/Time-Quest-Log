<UserControl x:Class="TimeQuestLogDesktopApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeQuestLogDesktopApp.Views" xmlns:viewmodels="clr-namespace:TimeQuestLogDesktopApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock 
            HorizontalAlignment="Center"
            Text="Settings"
            Foreground="{StaticResource TextPrimaryBrush}" 
            Style="{StaticResource HeaderText}"/>
        <StackPanel 
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Foreground="{StaticResource TextPrimaryBrush}"
                Content="Toggle Launch on Startup" />
            <Image 
                Style="{StaticResource TooltipIcon}"
                Margin="0 0 20 0"
                Source="/Resources/iconmonstr-help-2-96.png"
                ToolTipService.InitialShowDelay="300"
                ToolTipService.BetweenShowDelay="2000">
                <Image.ToolTip>
                    <ToolTip>
                        <DockPanel Width="250" Height="70">
                            <TextBlock 
                                FontSize="14"
                                TextWrapping="Wrap">Enabling this will create a task scheduler that will launch the program on Windows login.</TextBlock>
                        </DockPanel>
                    </ToolTip>
                </Image.ToolTip>
            </Image>
            <CheckBox x:Name="StartupToggle" 
              Style="{StaticResource ToggleSwitchStyle}"
              IsChecked="{Binding IsStartupEnabled, Mode=TwoWay}"
              Command="{Binding ToggleStartupCommand}" />

        </StackPanel>
    </Grid>
</UserControl>
